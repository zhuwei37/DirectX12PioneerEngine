<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style  x:Key="EllipseButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="3"  x:Name="PART_Bor" Background="#e6e6e6">
                        <Grid Background="Transparent">
                            <Ellipse Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center"  VerticalAlignment="Center"   Height="15" Width="15">
                            </Ellipse>
                            <Rectangle Width="5"  Height="5" HorizontalAlignment="Center" VerticalAlignment="Center"  Fill="Black">
                            </Rectangle>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#dbdbdb" TargetName="PART_Bor"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>