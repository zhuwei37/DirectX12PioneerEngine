<UserControl x:Class="Editor.View.Inspector.MeshFilterComponentInspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.View.Inspector"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="50"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Content="网格" VerticalAlignment="Center" Grid.Column="0"></Label>
        <Border Grid.Column="1" CornerRadius="5" BorderBrush="Black" Margin="0,5,0,5" BorderThickness="0.5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Resource/Image/Icon/Mesh.png" Margin="5,1,5,1" Height="12" Width="12"/>
                <Label Content="{Binding SelectedMeshName}" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Column="1"/>
                <Button HorizontalAlignment="Right" Margin="0,0,10,0" Command="{Binding SelectMeshCommand}" Style="{StaticResource EllipseButtonStyle}" Height="20" Width="20" Grid.Column="2"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
