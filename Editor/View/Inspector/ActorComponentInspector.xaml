<UserControl x:Class="Editor.View.Inspector.ActorComponentInspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.View.Inspector"
             xmlns:vm="clr-namespace:Editor.ViewModel.Inspector.Component"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!--<Style x:Key="TB_AddComponent" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    
                </Setter.Value>
            </Setter>
        </Style>-->
        <Style x:Key="TB_ComponentTitle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border BorderThickness="0.5" BorderBrush="Black">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding ComponentName,UpdateSourceTrigger=LostFocus}" Grid.Column="2" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                        </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
       
        <Style x:Key="ComponentInspectorListBoxItemSytle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border BorderBrush="Black" BorderThickness="1"/>
                                <ToggleButton Grid.Row="1" Style="{StaticResource TB_ComponentTitle}" IsChecked="True" HorizontalAlignment="Stretch" x:Name="PART_TB"/>
                                <ContentControl x:Name="PART_Content" Grid.Row="2" Content="{Binding}" Visibility="Visible">
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="{ x:Type vm:TransformComponent}">
                                            <local:TransformComponentInspector/>
                                        </DataTemplate>
                                        <DataTemplate DataType="{x:Type vm:MeshFilterComponent}">
                                            <local:MeshFilterComponentInspector/>
                                        </DataTemplate>
                                        <DataTemplate DataType="{x:Type vm:MeshRendererComponent}">
                                            <local:MeshRendererComponentInspector/>
                                        </DataTemplate>
                                    </ContentControl.Resources>
                                </ContentControl>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding ElementName=PART_TB,Path=IsChecked}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" TargetName="PART_Content"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=PART_TB,Path=IsChecked}" Value="True">
                                <Setter Property="Visibility" Value="Visible" TargetName="PART_Content"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ComponentListBoxSytle" TargetType="ListBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <ItemsPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ComponentListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border  x:Name="PART_Bor">
                            <Label  Content="{Binding }">
                                <b:Interaction.Triggers>
                                  <b:EventTrigger EventName="PreviewMouseDown">
                                    
                                      <b:InvokeCommandAction Command="{Binding  RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.AddComponentCommand}" CommandParameter="{Binding}"></b:InvokeCommandAction>
                                        
                                      <b:ChangePropertyAction PropertyName="IsOpen" TargetObject="{Binding ElementName=popUp}"  Value="False"/>
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </Label>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="LightBlue" TargetName="PART_Bor"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ComponentListBoxStyle" TargetType="ListBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border>
                            <ScrollViewer>
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <!--<Style x:Key="MaterialPropertyListBoxItemSytle" TargetType="ListBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border>
                            
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->
        <Style x:Key="TB_MaterialHeader" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border BorderThickness="0.5" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" MinWidth="10" MaxWidth="15"/>
                                    <ColumnDefinition Width="auto" MinWidth="30" MaxWidth="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!--<ToggleButton Content="下" IsChecked="False" Grid.Row="1" VerticalAlignment="Bottom"/>-->
                                <Image Source="/Resource/Image/Icon/Material.png" MaxHeight="30" Grid.Row="0"  Grid.RowSpan="2" Grid.Column="1"/>
                                <Label  Grid.Column="2" Grid.Row="0" Content="{Binding MaterialName}" ContentStringFormat=" {0} '(Material)'"/>
                                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch">
                                    <Label Content="Shader:" />
                                    <ComboBox HorizontalAlignment="Stretch" ItemsSource="{Binding Shaders}" DisplayMemberPath="ShaderName" SelectedIndex="{Binding SelectedShaderIndex}" MinWidth="100">

                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="MaterialFloatPorpertyTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="{Binding Title}" Grid.Column="0"/>
                <TextBox Text="{Binding PropertyValue,Converter={StaticResource StringToFloat},UpdateSourceTrigger=LostFocus}" Grid.Column="1" MinWidth="20"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="MaterialFloat3PorpertyTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="{Binding Title}" Grid.Column="0"/>
                <StackPanel Orientation="Horizontal"  Grid.Column="1" >
                    <Label Content="X:"/>
                    <TextBox Text="{Binding PropertyValue.X}" MinWidth="20"/>
                    <Label Content="Y:"/>
                    <TextBox Text="{Binding PropertyValue.Y}"  Grid.Column="1" MinWidth="20"/>
                    <Label Content="Z:"/>
                    <TextBox Text="{Binding PropertyValue.Z}"  Grid.Column="1" MinWidth="20"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="MaterialFloat4PorpertyTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="{Binding Title}" Grid.Column="0"/>
                <StackPanel Orientation="Horizontal"  Grid.Column="1" >
                    <Label Content="X:"/>
                    <TextBox Text="{Binding PropertyValue.X}"  Grid.Column="1" MinWidth="20"/>
                    <Label Content="Y:"/>
                    <TextBox Text="{Binding PropertyValue.Y}"  Grid.Column="1" MinWidth="20"/>
                    <Label Content="Z:"/>
                    <TextBox Text="{Binding PropertyValue.Z}"  Grid.Column="1" MinWidth="20"/>
                    <Label Content="W:"/>
                    <TextBox Text="{Binding PropertyValue.W}"  Grid.Column="1" MinWidth="20"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="MaterialTexturePropertyTemplpate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="{Binding Title}" Grid.Column="0"/>
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0.5">
                    <local:MaterialTexturePropertyView Height="80" Width="80" DataContext="{Binding PropertyValue}"/>
                </Border>
            </Grid>
        </DataTemplate>
        <local:MaterialPropertyItemTemplateSelector x:Key="MaterialPropertyTemplate"
                                                     MaterialFloatPorpertyTemplate="{StaticResource MaterialFloatPorpertyTemplate}"
                                                    MaterialFloat3PropertyTemplate="{StaticResource MaterialFloat3PorpertyTemplate}"
                                                    MaterialFloat4PropertyTemplate="{StaticResource MaterialFloat4PorpertyTemplate}"
                                                    MaterialTexturePropertyTemplate="{StaticResource MaterialTexturePropertyTemplpate}">
            
        </local:MaterialPropertyItemTemplateSelector>
        <Style x:Key="MaterialListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="Transparent">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border BorderBrush="Black" BorderThickness="1" />
                                <ToggleButton Background="Transparent" Grid.Row="1" Style="{StaticResource TB_MaterialHeader}" HorizontalAlignment="Stretch" x:Name="PART_TB"/>
                                <Grid Grid.Row="2" x:Name="PART_GridProeprties">
                                    <ListBox Style="{StaticResource StackPanelListBoxStyle}" ItemsSource="{Binding MaterialProperties}" ItemTemplateSelector="{StaticResource MaterialPropertyTemplate}">
                                        
                                    </ListBox>
                                </Grid>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding ElementName=PART_TB,Path=IsChecked}" Value="False">
                                <Setter Property="Visibility" TargetName="PART_GridProeprties" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=PART_TB,Path=IsChecked}" Value="True">
                                <Setter Property="Visibility" TargetName="PART_GridProeprties" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
        
    </UserControl.Resources>
    <ScrollViewer>
        <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*" MinWidth="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Resource/Image/Icon/GameObject.png" VerticalAlignment="Top" Margin="2" Grid.RowSpan="2"/>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBox   Grid.Column="1" Text="{Binding SceneNodeName}" TextAlignment="Left" Margin="2" HorizontalAlignment="Stretch"/>
                </Grid>
                <CheckBox Grid.Row="0" VerticalAlignment="Center" Content="静态" Grid.Column="2"/>
                <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" MinWidth="50"/>
                        <ColumnDefinition Width="1*" MinWidth="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*" MinWidth="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="标签" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" VerticalContentAlignment="Center" SelectedIndex="0" Margin="2" HorizontalAlignment="Stretch">
                            <ComboBoxItem>Untagged</ComboBoxItem>
                            <ComboBoxItem>Player</ComboBoxItem>
                            <ComboBoxItem>Main Camera</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*" MinWidth="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="图层" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" VerticalContentAlignment="Center" SelectedIndex="0" Margin="2" HorizontalAlignment="Stretch">
                            <ComboBoxItem>Default</ComboBoxItem>
                            <ComboBoxItem>UI</ComboBoxItem>
                            <ComboBoxItem>Water</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <ListBox
                        Style="{StaticResource ComponentListBoxSytle}"
                        ItemContainerStyle="{StaticResource ComponentInspectorListBoxItemSytle}"
                        ItemsSource="{Binding Components}"></ListBox>
                    <ListBox ItemsSource="{Binding Materials}"  
                             Style="{StaticResource StackPanelListBoxStyle}"
                             ItemContainerStyle="{StaticResource MaterialListBoxItemStyle}">
                        
                    </ListBox>
                    <ToggleButton Width="200" x:Name="Btn_AddComponent"  Margin="0,10,0,0" Content="添加组件">

                    </ToggleButton>
                    <Popup StaysOpen="False" MinHeight="200" MinWidth="150"  x:Name="popUp" PlacementTarget="{Binding ElementName=Btn_AddComponent}" Placement="Center" IsOpen="{Binding ElementName=Btn_AddComponent,Path=IsChecked,Mode=TwoWay}">
                        <Border BorderBrush="Black" BorderThickness="1">
                        <Grid Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label HorizontalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Content="组件列表"  FontSize="15"/>
                                <ListBox  Grid.Row="1" Style="{StaticResource ComponentListBoxStyle}" ItemContainerStyle="{StaticResource ComponentListBoxItemStyle}" ItemsSource="{Binding ComponentTypes}">
                                    
                                </ListBox>
                        </Grid>
                        </Border>
                    </Popup>
                </StackPanel>
            </Grid>

          
        </Grid>
    </ScrollViewer>
</UserControl>
