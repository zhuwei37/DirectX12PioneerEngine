<UserControl x:Class="Editor.View.Inspector.TransformComponentInspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.View.Inspector"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="60" Width="auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="位置" Grid.Row="0"/>
            <Label Content="旋转" Grid.Row="1"/>
            <Label Content="缩放" Grid.Row="2"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="X" Grid.Row="0"/>
            <Label Content="X" Grid.Row="1"/>
            <Label Content="X" Grid.Row="2"/>

            <Label Content="Y" Grid.Row="0" Grid.Column="2"/>
            <Label Content="Y" Grid.Row="1" Grid.Column="2"/>
            <Label Content="Y" Grid.Row="2" Grid.Column="2"/>

            <Label Content="Z" Grid.Row="0" Grid.Column="4"/>
            <Label Content="Z" Grid.Row="1" Grid.Column="4"/>
            <Label Content="Z" Grid.Row="2" Grid.Column="4"/>

            <TextBox Text="{Binding Position_X,UpdateSourceTrigger=Default}"  Grid.Row="0" Grid.Column="1"/>
            <TextBox Text="{Binding Rotate_X,UpdateSourceTrigger=Default}" Grid.Row="1" Grid.Column="1"/>
            <TextBox Text="{Binding Scale_X,UpdateSourceTrigger=Default}" Grid.Row="2" Grid.Column="1"/>

            <TextBox Text="{Binding Position_Y,UpdateSourceTrigger=Default}" Grid.Row="0" Grid.Column="3"/>
            <TextBox Text="{Binding Rotate_Y,UpdateSourceTrigger=Default}" Grid.Row="1" Grid.Column="3"/>
            <TextBox Text="{Binding Scale_Y,UpdateSourceTrigger=Default}" Grid.Row="2" Grid.Column="3"/>

            <TextBox Text="{Binding Position_Z,UpdateSourceTrigger=Default}" Grid.Row="0" Grid.Column="5"/>
            <TextBox Text="{Binding Rotate_Z,UpdateSourceTrigger=Default}" Grid.Row="1" Grid.Column="5"/>
            <TextBox Text="{Binding Scale_Z,UpdateSourceTrigger=Default}" Grid.Row="2" Grid.Column="5"/>
        </Grid>
    </Grid>
</UserControl>
