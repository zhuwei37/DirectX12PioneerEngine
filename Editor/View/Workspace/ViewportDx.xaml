<UserControl x:Class="Editor.View.Workspace.ViewportDx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.View.Workspace"
             mc:Ignorable="d" 
             xmlns:control="clr-namespace:Editor.Control"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <control:ViewPortForm RenderHostId="{Binding RenderHostId,Mode=OneWayToSource}"
                              RenderHostType="{Binding RenderType}"/>
    </Grid>
</UserControl>
