<UserControl x:Class="Editor.View.DockMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.View"
             mc:Ignorable="d" 
             xmlns:dockx="http://schemas.xceed.com/wpf/xaml/avalondock"
             xmlns:dock="https://github.com/Dirkster99/AvalonDock"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:CC x:Key="c1" />
    </UserControl.Resources>
    <Grid>
      

        <dockx:DockingManager  x:Name="layout"  Grid.Row="1"
                              AnchorablesSource="{Binding Tools,Mode=TwoWay}" 
                              DocumentsSource="{Binding MainDocuments}"  > 
            <dockx:DockingManager.LayoutItemContainerStyle>
                <Style TargetType="{x:Type dockx:LayoutItem}">
                    <Setter Property="Title" Value="{Binding Model.Title}"/>
                    <Setter Property="CanClose" Value="True"/>
                    <Setter Property="CloseCommand" Value="{StaticResource c1}" />
                </Style>
            </dockx:DockingManager.LayoutItemContainerStyle>
            <dockx:DockingManager.LayoutItemTemplateSelector>
                <local:ViewTemplateSelector>
                </local:ViewTemplateSelector>
            </dockx:DockingManager.LayoutItemTemplateSelector>
            <dockx:DockingManager.LayoutUpdateStrategy>
                <local:LayoutUpdateStrategy/>
            </dockx:DockingManager.LayoutUpdateStrategy>
        </dockx:DockingManager>
    </Grid>
</UserControl>
